@model ExchangePlatform.Models.Implemenation.OrdersTableModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p><b>Orders List</b></p>
<br>
<br />
<form method="post" action="/Home/OrderList">   
    <p>
        Filter by Document Date:      
        <input type="date" name="dateBegin" value="01.01.2023" />
        <input type="date" name="dateEnd" value="31.01.2023" />
    </p>
    <input type="submit" value="Применить" />
</form>
<form method="post">
    <p>
        Filter by provider:
        <select name="provider" multiple size="1">
            @foreach(var provider in Model.Providers)
            {
                <option name="@provider.ProviderName" value="@provider.ProviderName">@provider.ProviderName</option>
            }
        </select>
        <input type="hidden" value="@Model" />
        <input type="submit" value="Применить" />
    </p>
    </form>
    <br />
    <br />
    <div class="orderhead">
        DocNumber | DocDate | Sender | Reciever | DocSum
    </div>
    @for (int i = 0; i < Model.Orders.Count; i++)
    {
        if (((i + 1) % 2) == 0)
        {
            <a href="/Home/GetOrder/@Model.Orders[i].DocId">
                <div class="second">
                    @Model.Orders[i].DocNumber | @Model.Orders[i].DocDate | @Model.Orders[i].Sender | @Model.Orders[i].Reciever | @Model.Orders[i].DocSum
                </div>
            </a><input type="hidden" name="Orders[@i].DocNumber" value="@Model.Orders[i].DocNumber" /><input type="hidden" name="Orders[@i].DocDate" value="@Model.Orders[i].DocDate" /><input type="hidden" name="Orders[@i].Sender" value="@Model.Orders[i].Sender" /><input type="hidden" name="Orders[@i].Recieve" value="@Model.Orders[i].Reciever" /><input type="hidden" name="Orders[@i].DocSum" value="@Model.Orders[i].DocSum" />
        }
        else
        {
            <a href="/Home/GetOrder/@Model.Orders[i].DocId">
                <div class="first">
                    @Model.Orders[i].DocNumber | @Model.Orders[i].DocDate | @Model.Orders[i].Sender | @Model.Orders[i].Reciever | @Model.Orders[i].DocSum
                </div>
            </a><input type="hidden" name="Orders[@i].DocNumber" value="@Model.Orders[i].DocNumber" /><input type="hidden" name="Orders[@i].DocDate" value="@Model.Orders[i].DocDate" /><input type="hidden" name="Orders[@i].Sender" value="@Model.Orders[i].Sender" /><input type="hidden" name="Orders[@i].Recieve" value="@Model.Orders[i].Reciever" /><input type="hidden" name="Orders[@i].DocSum" value="@Model.Orders[i].DocSum" />
        }
    }

    <br />
    <br />
    <a href="/Home/CreateOrder"><p>Создать новый</p></a>
